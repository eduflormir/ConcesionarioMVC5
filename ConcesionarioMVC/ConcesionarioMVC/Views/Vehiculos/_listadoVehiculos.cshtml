@model IEnumerable<ConcesionarioMVC.Models.Vehiculos>

<h1>Listado Vehiculos</h1>


@{
    int n = 0;
}

@foreach (var item in Model)
{
    if (n % 3 == 0)
    {
        @Html.Raw("<div class=\"row\">")
    }

    <div class="col-md-4">
        <h3>@item.matricula</h3>
        <p>@item.marca @item.modelo</p>
        <p>@item.coste</p>
    </div>

    if (++n % 3 == 0 || n == Model.Count())
    {
        @Html.Raw("</div>")
    }

}